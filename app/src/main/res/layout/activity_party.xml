<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".PartyActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:gravity="center"
        android:padding="@android:dimen/app_icon_size"
        android:text="BlindTify"
        android:textSize="@android:dimen/app_icon_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Request"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Responce1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/teal_200"
        android:text="Responce 1"
        android:textSize="25dp"
        android:theme="@style/Button.Play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Responce2"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Responce2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/teal_200"
        android:text="Responce 2"
        android:textSize="25dp"
        android:theme="@style/Button.Play"
        app:layout_constraintTop_toBottomOf="@+id/Responce1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Responce3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/teal_200"
        android:text="Responce 3"
        android:textSize="25dp"
        android:theme="@style/Button.Play"
        app:layout_constraintTop_toBottomOf="@+id/Responce2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Responce4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/teal_200"
        android:text="Responce 4"
        android:textSize="25dp"
        android:theme="@style/Button.Play"
        app:layout_constraintTop_toBottomOf="@+id/Responce3" />


</androidx.constraintlayout.widget.ConstraintLayout>